<div id="burger_area">

	<ul id="undevoured">
		<h2>Available Burgers</h2>
		{{#each burgers}}
			{{#unless this.devoured }}
				<li>
					{{ burger_name }}
					<button class='devour-btn' 
						data-id={{this.id}}>
						<i 
							class="fa fa-cutlery" 
							aria-hidden="true"></i>
					</button>
				</li>
			{{/unless}}
		{{/each}}
	</ul>

	<ul id="devoured">
		<h2>Devoured Burgers</h2>
		{{#each burgers}}
			{{#if this.devoured }}
				<li>
					<s>{{ burger_name }}</s>
					<button class='devoured-btn'>
						<i 
								class="fa fa-times" 
								aria-hidden="true"
								data-id={{this.id}}></i>
					</button>
				</li>
			{{/if}}
		{{/each}}
	</ul>

</div>